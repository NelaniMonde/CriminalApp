@model CriminalRecords
@{
    //var susNo = TempData["suspectNo"];
    var susNo = TempData["FoundSusNo"];
    // TempData.Keep("suspectNo");

    //var idNumber = TempData["IDNumber"];
    var idNumber = TempData["IDNumber"];
}
<body>
<form method="post" asp-action="CriminalRecordView">
    <div class="card rounded-3 me-1g-n5 border p-3 mt-4 bg-blur bg-secondary bg-opacity-75">
        <div class="row pb-2">
            <h2 class="text-dark">New Criminal Record</h2>

            <hr />
        </div>
       
    

        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Offence commited  </label>
            <div class="col-sm-10">
                <select asp-for="Offences" class="form-control">
                 <option value="">Select Criminal Offence</option>
                 <option value="Assault">Assault</option>
                    <option value="Burglary">Burglary</option>
                    <option value="Drugs">Drugs</option>
                    <option value="Hijacking">Hijacking</option>
                    <option value="Murder">Murder</option>
                    <option value="Offences_of_Dishonesty">Offences Of Dishonesty</option>
                    <option value="Other Offences">Other Offences</option>
                    <option value="Rape">Rape</option>
                    <option value="Sexual_Harrasment">Sexual Harrasment</option>
                    <option value="Sexual_Offences">Sexual Offences</option>
                    <option value="Violence">Violence</option>
                </select>
            </div>
        </div>
        <div class="mb-3 row ">
            <div class="col-sm-10">
                <input type="hidden" asp-for="SuspectNo" class="form-control"  />
            </div>
        </div>

        <div class="mb-3 row ">
            <div class="col-sm-10">
                <input type="hidden" asp-for="ManagerNoForeign" value="@TempData["ManagerForeignKey"]" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row ">
            <label class="col-sm-2 col-form-label">Suspect ID Number  </label>
            <div class="col-sm-10">
                <input disabled value="@idNumber" class="form-control" />
                
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Sentence  </label>
            <div class="col-sm-10">
                <input asp-for="Sentence" class="form-control"  placeholder="Sentence in Years" />
                <span asp-validation-for="Sentence" class="text-danger"></span>
            </div>
        </div>

        
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Issued At  </label>
            <div class="col-sm-10">
                <input asp-for="LocationIssued" class="form-control" placeholder="Issued At" />
                <span asp-validation-for="LocationIssued" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Issued By  </label>
            <div class="col-sm-10">
                <input asp-for="IssuedBy" class="form-control" placeholder="Issued By" />
                <span asp-validation-for="IssuedBy" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Issue Date </label>
            <div class="col-sm-10">
                <input asp-for="DateIssued" type="date" max="@DateTime.Now.ToString("yyyy/mm/dd")" class="form-control" />
                
            </div>
        </div>
    

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
       @* <a asp-controller="Loan" asp-action="LoanView" class="btn btn-secondary me-md-2" style="width:150px">Close</a>*@
            <button type="submit" class="btn btn-primary" style="width:150px">Save Changes</button>
        </div>
    </div>

</form>
</body>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}