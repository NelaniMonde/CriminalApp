@model List<Suspects>


<body>
 <h1 class="text-white glassBackground" style="width:fit-content; margin-top:8%; margin-bottom:5%;">Showing suspects</h1>


    <div class="card rounded-3 me-1g-n5 border p-3 mt-4 glassBackground p-3" >
<table class="table-bordered border-secondary text-white">
    <thead>
        <tr>
            <th>Suspect ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Number of Criminal Charges</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.CriminalRecords!=null)
            {
                <tr>
                <td>@item.SuspectID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.CriminalRecords.Count()</td>
                <td>
                    <div>
                      <a asp-controller="Criminal" asp-action="CriminalRecordView" asp-route-SuspectNo="@item.SuspectNo" class="btn btn-primary glassBackground" style="width:200px">Create Criminal Record</a>
                    </div>
                </td>
                </tr>
            }
            else
            {

                <tr>
                    <td>@item.SuspectID</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>0</td>
                    <td>
                        <div>
                            <a asp-controller="Criminal" asp-action="CriminalRecordView" asp-route-SuspectNo="@item.SuspectNo" class="btn btn-primary glassBackground" style="width:200px">Create Criminal Record</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
</body>