                    <img src="~/images/CriminalImage1.jpg" width="50" height="50" alt="Logo" class="navbar-logo">
                    COFC
                    </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="color:black;" aria-controls="color:black"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

               
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                        @if (User.IsInRole(SD.Role_User_NormalUser) || User.IsInRole(SD.Role_User_Manager) || User.IsInRole(SD.Role_User_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Criminal" asp-action="DashboardView">COFS Dashboard</a>
                            </li>
                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Suspects
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink" >
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="SuspectsView">Add Suspects</a></li>
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="showSuspects">Show Suspect</a></li>
                                </ul>
                            </li>
                            @* <li class="nav-item">
                            <a class="nav-link active" asp-controller="Criminal" asp-action="CriminalRecordView">Criminal Record</a>
                        </li>*@
                            @* <li class="nav-item dropdown" id="navbarColor01">
                          <a class="nav-link dropdown-toggle" data-bs-target="#navbarColor01" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Managers And Offences</a>
                          <div class="dropdown-menu">
                            <a class="dropdown-item active"asp-controller="Criminal" asp-action="ManagerView">Add Mangers</a>
                            </div>
                        </li> *@


                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Managers and Cases
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="AddManagers">Add Case Manager</a></li>
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="viewCases">Show Cases</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                        <partial name="_LoginPartial" />


                    </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top align-bottom footer text-muted">
        <div class="container">
            &copy; 2024 - CriminalProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
