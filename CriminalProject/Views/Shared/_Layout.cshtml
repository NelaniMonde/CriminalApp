<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title >Criminal Offence Capturer</title>
    
    <!--Title icon display-->
    <link rel="icon" href="~/images/CriminalImage1.jpg" type="image/x-icon">
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CriminalProject.styles.css" asp-append-version="true" />
    
    <!--Data table display-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.dataTables.css" />

    
 
  
    <!--Toast online styling referencing -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    
  
</head>





<body>

    <header>
        <nav class="navbar navbar-expand-lg glassBackground" >
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/CriminalImage1.jpg" width="50" height="50" alt="Logo" class="navbar-logo">
                    COFC
                    </a>

                <button class="nav-toggle" id="navToggle">
                    ☰
                </button>

                <nav class="nav-menu  glassBackground" style="background-color:black; z-index:100;" id="navMenu"hidden>
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole(SD.Role_User_NormalUser) || User.IsInRole(SD.Role_User_Manager) || User.IsInRole(SD.Role_User_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Criminal" asp-action="DashboardView">COFS Dashboard</a>
                            </li>
                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Suspects
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="SuspectsView">Add Suspects</a></li>
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="showSuspects">Show Suspect</a></li>
                                </ul>
                            </li>



                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Managers and Cases
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="AddManagers">Add Case Manager</a></li>
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="viewCases">Show Cases</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </nav>
               
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                        @if (User.IsInRole(SD.Role_User_NormalUser) || User.IsInRole(SD.Role_User_Manager) || User.IsInRole(SD.Role_User_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Criminal" asp-action="DashboardView">COFS Dashboard</a>
                            </li>
                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Suspects
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink" >
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="SuspectsView">Add Suspects</a></li>
                                    <li><a class="dropdown-item glassBackground text-white fw-bold" asp-area="" asp-controller="Criminal" asp-action="showSuspects">Show Suspect</a></li>
                                </ul>
                            </li>
                          


                            <li class="nav-item dropdown text-white">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Managers and Cases
                                </a>
                                <ul class="dropdown-menu glassBackground" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="AddManagers">Add Case Manager</a></li>
                                    <li><a class="dropdown-item glassBackground text-white" asp-area="" asp-controller="Criminal" asp-action="viewCases">Show Cases</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                        <partial name="_LoginPartial" />


                    </div>


                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top align-bottom footer text-muted">
        <div class="container">
            &copy; 2026 - CriminalProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <!--Internal js script referencing -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!--Bootstrap link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!--Data table script-->
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
