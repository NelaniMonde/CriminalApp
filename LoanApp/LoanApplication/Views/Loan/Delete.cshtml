@model LoanModel

<form method="post" asp-controller="Loan" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary"> Welcome to the loan Deletion Page</h3>
            <h5 class="text-primary">Hi there. I am Loaner, Your home loan digital assistance :D</h5>
            <hr />
        </div>
        <!--add Validations here

        <div asp-validation-summary="All"></div>

        -->
        <div class="mb-3">

            <label> Your name</label>
            <input disabled asp-for="Name" class="form-control" />
        </div><div class="mb-3">
            <label> Your Surname</label>
            <input disabled asp-for="Surname" class="form-control" />
        </div>
        <div class="mb-3">
            <label> Your Gross Salary:</label>
            <input disabled asp-for="GrossSalary" class="form-control" />
        </div>
        <div class="mb-3">
            <label> Your credit score(0-1200): </label>
            <input disabled asp-for="CreditScore" class="form-control" />
        </div>
        <div class="mb-3">
            <label> The purchase price of the property?: </label>
            <input disabled asp-for="PriceOfProperty" class="form-control" />
        </div>
        <div class="mb-3">
            <label> Loan Status </label>
            <input disabled asp-for="LoanStatus" class="form-control" />
        </div>



        <button type="submit" class="btn btn-primary" style="width:150px">Delete Loaner</button>

        <a asp-controller="Loan" asp-action="LoanView" class="btn btn-secondary" style="width:150px">Back </a>
    </div>
</form>
